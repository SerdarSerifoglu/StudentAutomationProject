@model StudentAutomationProject.Entities.Models.Courses

@{
    ViewData["Title"] = "Ders Düzenle";
    Layout = ViewBag.Layout;
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Uid" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <input asp-for="Id" class="form-control" hidden />
            </div>
            <div class="form-group">
                <input asp-for="DepartmentUid" class="form-control" hidden/>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Ders İsmi</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quota" class="control-label">Ders Kontenjanı</label>
                <input asp-for="Quota" class="form-control" />
                <span asp-validation-for="Quota" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Ders Kaydet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="List" asp-route-departmentUID="@Model.DepartmentUid">Listeye Dön</a>
</div>

