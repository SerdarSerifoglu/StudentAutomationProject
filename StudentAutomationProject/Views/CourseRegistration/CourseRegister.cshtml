@using StudentAutomationProject.Models.CourseRegistration
@model List<CourseRegisterViewModel>
@{
    ViewData["Title"] = "Ders Kayıt ";
    Layout = ViewBag.Layout;
}
<style>
    .form-control{
        border:0!important;
    }
</style>

<form asp-controller="CourseRegistration" asp-action="CourseRegister" method="post">
    @for (int i = 0; i < Model.Count(); i++)
    {
        <div class="form-control">
            <input asp-for="@Model[i].Exist" type="checkbox" />
            <label asp-for="@Model[i].CourseUID">@Model[i].CourseName</label>
            <input asp-for="@Model[i].CourseName" type="hidden" />
            <input asp-for="@Model[i].CourseUID" type="hidden" />
        </div>
    }
    <br/>
    <input class="btn btn-success" type="submit" value="Ders Kaydet" />
</form>


