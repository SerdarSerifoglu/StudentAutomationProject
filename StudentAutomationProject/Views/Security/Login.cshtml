@model StudentAutomationProject.Models.Security.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Giriş Ekranı</title>
</head>
<body>
    <h3>Giris Yap</h3>
    <form asp-controller="Security" asp-action="Login" method="post">
        <div asp-validation-summary="All"></div>
        <input type="text" asp-for="Username" placeholder="Kullanıcı Adı" /><br />
        <input type="password" asp-for="Password" placeholder="Şifre" /><br />
        <input type="submit" value="Giriş Yap" /><br />
    </form>
</body>
</html>
