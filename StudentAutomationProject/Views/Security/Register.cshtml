@model StudentAutomationProject.Models.Security.RegisterViewModel
@{
    Layout = "~/Views/_LoginLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Kayıt Ol</title>
</head>
<body>
    <br />
    <h2>ÖĞRENCİ OTOMASYONU</h2>
    <br />
    <h4>Kayıt Ekranı</h4>
    <br />
    <form asp-controller="Security" asp-action="Register" method="post">
        <div style="color:red" asp-validation-summary="All"></div>
        <input type="text" asp-for="Username" class="fadeIn second" placeholder="Kullanıcı Adı" /><br />
        <input type="text" asp-for="Email" class="fadeIn second" placeholder="Email" /><br />
        <input type="text" asp-for="TCNO" class="fadeIn second" placeholder="TCNO" /><br />
        <input type="password" asp-for="Password" class="fadeIn third" placeholder="Şifre" /><br />
        <input type="password" asp-for="ConfirmedPassword" class="fadeIn third" placeholder="Şifre Tekrar" /><br />
        <br />
        <input type="submit" class="fadeIn fourth" value="Kayıt Ol" /><br />
    </form>
</body>
</html>



